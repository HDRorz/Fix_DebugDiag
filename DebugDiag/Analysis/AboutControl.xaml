<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="DebugDiag.Analysis.AboutControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
  <Grid>
    <StackPanel Margin="5,5">
      <TextBlock Margin="5,5" FontSize="22">About</TextBlock>
      <StackPanel Margin="20,5">
        <TextBlock>Debug Diagnostic Tool</TextBlock>
        <TextBlock>Copyright © 2014</TextBlock>
        <StackPanel Margin="5,20" Orientation="Horizontal">
          <Image Height="16" Width="16" Source="{StaticResource ApplicationIcon}" />
          <TextBlock Name="BinariesAndVersionTextBlock" Margin="5,0" Text="DebugDiag.Analysis" />
        </StackPanel>
        <StackPanel Visibility="{StaticResource InternalBuildFeatureVisibility}">
          <TextBlock>Note: This is an internal Developer Preview version strictly intended for internal use at Microsoft</TextBlock>
          <TextBlock>DO NOT DISTRIBUTE OUTSIDE MICROSOFT</TextBlock>
        </StackPanel>
      </StackPanel>
    </StackPanel>
  </Grid>
</UserControl>