<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="DebugDiag.Analysis.PathListControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:DebugDiag.Analysis" MinHeight="100">
  <FrameworkElement.Resources>
    <ResourceDictionary />
  </FrameworkElement.Resources>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="Auto" />
      </Grid.ColumnDefinitions>
      <Button Height="24" Width="24" Grid.Column="2" Background="#00FFFFFF" BorderBrush="#00FFFFFF" ToolTip="Add Path" Click="NewButton_Click">
        <Image Source="{StaticResource ListItemAddImage}" />
      </Button>
      <Button Height="24" Width="24" Grid.Column="3" Background="#00FFFFFF" BorderBrush="#00FFFFFF" ToolTip="Remove Path" Click="RemoveButton_Click">
        <Image Source="{StaticResource ListItemDeleteImage}" />
      </Button>
      <Button Height="24" Width="24" Grid.Column="4" Background="#00FFFFFF" BorderBrush="#00FFFFFF" ToolTip="Move Selected Paths Up" Click="MoveUpButton_Click">
        <Image Source="{StaticResource ListItemUpImage}" />
      </Button>
      <Button Height="24" Width="24" Grid.Column="5" Background="#00FFFFFF" BorderBrush="#00FFFFFF" ToolTip="Move Selected Paths Down" Click="MoveDownButton_Click">
        <Image Source="{StaticResource ListItemDownImage}" />
      </Button>
    </Grid>
    <DataGrid Name="PathListView" Grid.Row="1" HeadersVisibility="None" CanUserAddRows="False" AutoGenerateColumns="False" VerticalGridLinesBrush="#00FFFFFF" HorizontalGridLinesBrush="#00FFFFFF" Background="#FFFFFFFF" ItemsSource="{Binding}" RowEditEnding="PathListView_RowEditEnding">
      <DataGrid.Columns>
        <DataGridTemplateColumn>
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate>
              <CheckBox ToolTip="Use this path?" IsEnabled="{Binding Optional}" IsChecked="{Binding IsChecked, UpdateSourceTrigger=PropertyChanged}" AutomationProperties.Name="{Binding Name}" />
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>
        <DataGridTemplateColumn Width="*">
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate>
              <TextBox AutomationProperties.Name="Name" BorderBrush="#00FFFFFF" ToolTip="{Binding Path}" IsReadOnly="{Binding IsReadOnly}" Loaded="PathTextBlock_Loaded" />
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>
        <DataGridTemplateColumn>
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate>
              <Button FontWeight="Bold" Content="..." ToolTip="Browse" BorderBrush="#00FFFFFF" AutomationProperties.Name="Browse" Visibility="{Binding CanEdit, Converter={StaticResource boolToVis}, ConverterParameter=true}" Click="BrowseButton_Click" />
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>
      </DataGrid.Columns>
    </DataGrid>
  </Grid>
</UserControl>