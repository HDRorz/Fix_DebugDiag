<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="DebugDiag.Analysis.AnalysisControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:DebugDiag.Analysis">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition />
      <RowDefinition MinHeight="150" Height="{Binding Path=UserPreferences.AnalysisControlSplitterPosition, Mode=TwoWay}" />
    </Grid.RowDefinitions>
    <GroupBox Margin="5" Grid.Row="0" Header="Analysis Rules">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto" />
          <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <local:AnalysisRuleListControl Grid.Row="1" />
      </Grid>
    </GroupBox>
    <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Top" ShowsPreview="False" Height="5" AutomationProperties.Name="Resize" AutomationProperties.HelpText="Resize" />
    <GroupBox Grid.Row="1" Margin="5" Header="Data Files">
      <local:DataFileListControl DataContext="{Binding DataFileListVM}" />
    </GroupBox>
  </Grid>
</UserControl>